									"if (jsonData.token) {",
									"    pm.collectionVariables.set(\"token\", jsonData.token);",
									"    console.log(\"Token updated: \" + jsonData.token);",
									"    console.log(\"Base URL: \" + jsonData.base_url);",
									"}"
