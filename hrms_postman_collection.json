				{
					"name": "Login (All Roles)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.token) {",
									"    pm.collectionVariables.set(\"token\", jsonData.token);",
									"    if (jsonData.role === 'SUPER_ADMIN') pm.collectionVariables.set(\"superadmin_token\", jsonData.token);",
									"    if (jsonData.role === 'ADMIN') pm.collectionVariables.set(\"admin_token\", jsonData.token);",
									"    if (jsonData.role === 'HR') pm.collectionVariables.set(\"hr_token\", jsonData.token);",
									"    if (jsonData.role === 'EMPLOYEE') pm.collectionVariables.set(\"employee_token\", jsonData.token);",
									"    console.log(\"Token updated for role: \" + jsonData.role);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@futureinvo.com\",\n    \"password\": \"password123\"\n}",
							"options": {
								"raw": {
